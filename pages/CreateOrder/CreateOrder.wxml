<view class="page">
   <view class="section__title"/>
<form bindsubmit="formSubmit" bindreset="formReset">
   <view class="section__title">
      <input placeholder="姓名" name="receiveName" value="{{receiveName}}"/>
  </view>
   <view class="section__title">
      <input placeholder="手机号" name="receivePhone" value="{{receivePhone}}" />
  </view>
 <view class="section__title">
      <input placeholder="地址" name="receiveAddr" value="{{receiveAddr}}" />
  </view>
   <view class="section__title hide">
      <input  name="avatarUrl" value="{{avatarUrl}}"/>
  </view>

<view class="type">
  <picker bindchange="bindPickerChange" style="width:750rpx" value="{{timeType[index]}}" range="{{timeType}}" name="timeType">
    <view class="type1" style="width:750rpx">
      上门时间：{{timeType[index]}}
    </view>
  </picker>
</view>

  <view class="btn-area">
    <button class="bgc" formType="submit">提交</button>
  </view>
</form>
</view>


