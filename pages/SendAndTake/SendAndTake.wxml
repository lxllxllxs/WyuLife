<view class="page">
   <view class="section__title"/>
<form bindsubmit="formSubmit" bindreset="formReset">
   <view class="section__title">
      <input placeholder="联系人" name="contactName" value="{{contactName}}"/>
  </view>

   <view class="section__title">
      <input placeholder="手机号" name="contactPhone" value="{{contactPhone}}" />
  </view>
     <view class="section__title">
      <input placeholder="联系地址" name="contactAddr" value="{{contactAddr}}"/>
  </view>
   <view class="section__title">
     <textarea  class="textArea" placeholder="{{desc}}" auto-height="true" name="remark"/>
  </view>
<view class="type">
  <picker bindchange="bindPickerChange" style="width:750rpx" value="{{timeTypeArray[index]}}" range="{{timeTypeArray}}" name="type">
    <view class="type1" style="width:750rpx">
      上门时间：{{timeTypeArray[index]}}
    </view>
  </picker>
</view>


  <view class="btn-area">
    <button class="bgc" formType="submit">提交</button>
  </view>
</form>
</view>


