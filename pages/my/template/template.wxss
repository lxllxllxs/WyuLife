#mItem-wrap{
    width: 95%;
    height: 95%;
    align-items: center;

}
.item-image{
    width: 100%;
    height: 80%;
    border-radius: 5px;

}
.item-name{
    margin: 5px 0px 0px 4px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 15px;
    color: #565656;
    flex-grow: 1;

}
.item-sub{
    margin: 5px 0px 0px 4px;
    align-self: flex-start;
    font-size: 10px;
    color: #969696;
    flex-grow: 1;


}
.item-grade{
    align-self: flex-end;
    font-size: 10px;
    color: #24b0fc;
    margin: 0px 4px 4px 0px;
}